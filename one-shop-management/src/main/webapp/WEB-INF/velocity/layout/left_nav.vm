        });
        //角色管理
        $("#but_left_role").on("click", function () {
            $("iframe").attr("src", "#springUrl("/role/to_role")");
        });
        //权限管理
        $("#but_left_permission").on("click", function () {
            $("iframe").attr("src", "#springUrl("/permission/to_permission")");
        });

    })
</script>
